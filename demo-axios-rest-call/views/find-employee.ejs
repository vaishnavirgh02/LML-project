<!DOCTYPE html>
<html>
 
<head>
    <title>Body-Parser Module Demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
 
<body>
    <%- include('navbar'); -%>
    <div class="container">
        <h1>Find Employee</h1>

        <% if(messages) { %>
            <% for(let i = 0; i<messages.length; i++) { %>
                <div class="alert alert-<%= messages[i].type %> alert-dismissible fade show" role="alert">
                    <%= messages[i].message %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %>
        <% } %>
        <form action="/employee/find" method="GET">
            <div class="form-group">
                <label for="empId">Enter Employee ID</label>
                <input type="number" class="form-control" id="empId" name="empId" placeholder="Enter employee id ">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
            <br />
            <br />
            <% if (employees) { %>
            <div class="form-group">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID #</th>
                            <th>Name of the Employee</th>
                            <th>Salary</th>
                          </tr>
                    </thead>
                    <tbody>
                        <% for(let i = 0; i<employees.length; i++) { %>
                            <tr>
                                <td><%= employees[i].empId %></td>
                                <td><%= employees[i].empName %></td>
                                <td><%= employees[i].empSalary %></td>
                            </tr>
                            <% } %>
                    </tbody>

            </div>
            <% } %>
    
            
       
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
 
</html>
